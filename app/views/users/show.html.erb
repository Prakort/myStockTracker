<h2>User Profile <h2>

<div class="card card-header results-block" >
  <table class="col-md-12">
    <tbody>
      <tr>
        <td> <strong>Name: </strong> <p><%= @user.full_name %></p> </td>
        <td> <strong>Email: </strong> <p><%= @user.email %></p> </td>
        <td> 
          <% if current_user.not_friends_with?(@user.id) %>
          <%= link_to 'Follow friend?', friendships_path(friend: @user),
                          class: "btn btn-sm btn-success", method: :post %>
          <% else %>
            <span class="badge badge-secondar">
              You are friends
            </span>
        <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

